<android.support.design.widget.CoordinatorLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_photo_gallery_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@android:drawable/ic_menu_camera"
        android:clickable="true"
        android:elevation="2dp"
        android:maxHeight="@dimen/activity_horizontal_margin"
        android:maxWidth="@dimen/activity_horizontal_margin"
        app:layout_anchor="@+id/fragment_photo_gallery_recycler_view"
        app:layout_anchorGravity="bottom|end"
        app:layout_behavior="howhighami.com.howhighami.FABScrollBehavior"/>

</android.support.design.widget.CoordinatorLayout>