<?xml version="1.0" encoding="utf-8"?><!-- Panel with a single seekbar -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/com_adobe_image_bottombar_default_panel_padding"
    android:gravity="center"
    android:orientation="horizontal"
    android:weightSum="100"
    android:baselineAligned="false">

    <include
        layout="@layout/com_adobe_image_seekbar"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:progress="0"
        android:layout_weight="@integer/com_adobe_image_seekbar_weight" />
</LinearLayout>