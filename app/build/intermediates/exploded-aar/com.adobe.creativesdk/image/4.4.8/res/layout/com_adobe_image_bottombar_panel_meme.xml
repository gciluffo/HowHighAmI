<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/com_adobe_image_bottombar_default_panel_padding"
    android:orientation="vertical"
    android:gravity="center"
    android:weightSum="100">

    <RelativeLayout
        android:layout_width="@dimen/com_adobe_image_editor_bottombar_meme_text_width"
        android:layout_height="0dip"
        android:layout_weight="@integer/com_adobe_image_editor_meme_text_weight"
        android:layout_marginBottom="4dip">

        <com.adobe.android.ui.view.AdobeButton
            android:id="@+id/AdobeButton01"
            style="?attr/com_adobe_image_editor_bottombar_meme_button"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/feather_edit_top_text" />

        <ImageButton
            android:id="@+id/ImageButton01"
            style="?attr/com_adobe_image_editor_bottombar_meme_clear_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/AdobeButton01"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:visibility="invisible" />
    </RelativeLayout>

    <View
        android:layout_width="1dip"
        android:layout_height="0dip"
        android:layout_weight="@integer/com_adobe_image_editor_meme_spacer_weight" />

    <RelativeLayout
        android:layout_marginTop="4dip"
        android:layout_width="@dimen/com_adobe_image_editor_bottombar_meme_text_width"
        android:layout_height="0dip"
        android:layout_weight="@integer/com_adobe_image_editor_meme_text_weight">

        <com.adobe.android.ui.view.AdobeButton
            android:id="@+id/AdobeButton02"
            style="?attr/com_adobe_image_editor_bottombar_meme_button"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/feather_edit_bottom_text" />

        <ImageButton
            android:id="@+id/ImageButton02"
            style="?attr/com_adobe_image_editor_bottombar_meme_clear_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/AdobeButton02"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:visibility="invisible" />
    </RelativeLayout>

</LinearLayout>